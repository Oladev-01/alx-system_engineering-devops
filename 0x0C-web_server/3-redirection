#!/usr/bin/env bash
# configuring the server for redirection

if ! command -v nginx &> /dev/null; then
    sudo apt-get -y install nginx
fi

# making the redirection
sed '/server_name .*$/a \\n     location /redirect_me {\n        return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;\n    }\n' "/etc/nginx/sites-enabled/default"

sudo service nginx reload
